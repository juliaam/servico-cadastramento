generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model aplicativo {
  codigo      Int          @id @default(autoincrement()) @db.SmallInt
  nome        String       @db.VarChar
  custoMensal Float
  assinatura  assinatura[]
}

model assinatura {
  codigo         Int         @id @default(autoincrement()) @db.SmallInt
  codApp         Int         @db.SmallInt
  codCli         Int         @db.SmallInt
  inicioVigencia DateTime?   @default(dbgenerated("CURRENT_DATE")) @db.Date
  fimVigencia    DateTime?   @db.Date
  aplicativo     aplicativo  @relation(fields: [codApp], references: [codigo], onDelete: NoAction, onUpdate: NoAction)
  cliente        cliente     @relation(fields: [codCli], references: [codigo], onDelete: NoAction, onUpdate: NoAction, map: "assinatura_codCli_fkey1")
  pagamento      pagamento[]
}

model cliente {
  codigo     Int          @id @default(autoincrement()) @db.SmallInt
  nome       String       @db.VarChar
  email      String
  assinatura assinatura[]
}

model pagamento {
  codigo        Int        @id @default(autoincrement()) @db.SmallInt
  codAssinatura Int        @db.SmallInt
  valorPago     Float
  dataPagamento DateTime   @default(dbgenerated("CURRENT_DATE")) @db.Date
  assinatura    assinatura @relation(fields: [codAssinatura], references: [codigo], onDelete: NoAction, onUpdate: NoAction)
}

model usuario {
  usuario String
  senha   String

  @@ignore
}
